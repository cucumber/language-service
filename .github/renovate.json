{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>cucumber/renovate-config",
    ":automergeMajor"
  ],
  "packageRules": [
    {
      "description": "Merge all tree sitter updates",
      "matchPackageNames": [
        "tree-sitter",
        "tree-sitter-*",
        "web-tree-sitter"
      ],
      "groupName": "tree-sitter"
    }
  ]
}
